    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :sport %><br>
    <%= f.select(:sport, options_for_select([["Cycling", "Cycling"], ["Running", "Running"], 
                                                        ["Swimming", "Swimming"], ["Gymn", "Gymn"]])) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :place_id %><br>
    <%= select_tag 'club[place_id]', options_from_collection_for_select(Place.all, 'id', 'district') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
