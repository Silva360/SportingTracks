<h1>Listing user_clubs</h1>

<table>
  <thead>
    <tr>
      <th>Club</th>
      <th>Join date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_clubs.each do |user_club| %>
      <tr>
        <td>
          <% @club = Club.find(user_club.club_id) %>
          <%= link_to "#{@club.name}", {:controller => "clubs", :action => "show", :id => @club.id }%>
        </td>
        <td><%= user_club.join_date %></td>
        <td><%= link_to 'Show', user_club %></td>
        <td><%= link_to 'Edit', edit_user_club_path(user_club) %></td>
        <td><%= link_to 'Destroy', user_club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User club', new_user_club_path %>
